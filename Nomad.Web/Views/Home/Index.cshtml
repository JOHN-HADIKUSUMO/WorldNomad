<div class="row" ng-controller="formCtrl">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="email">Type Positive Number:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="number" ng-model="number" placeholder="Please Enter Positive Number">
                        </div>
                    </div>
                    <div class="form-group" ng-hide="message==null">
                        <div class="col-sm-offset-3 col-sm-8 text-center">
                            {{message}}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-8 text-right">
                            <button type="button" class="btn btn-default" ng-disabled="number==null" ng-click="clearClick()">Clear</button>
                            <button type="button" class="btn btn-default" ng-disabled="number==null" ng-click="runClick()">Run</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-12" ng-show="model.GroupA.length > 0 && model.GroupB.length > 0 && model.GroupC.length > 0 && model.GroupD.length > 0">
        <div class="row">
            <div class="col-md-3">
                <table border="0">
                    <thead>
                        <tr>
                            <td><h5><b>Group A</b></h5></td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in model.GroupA track by $index">
                            <td>{{item}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-3">
                <table border="0">
                    <thead>
                        <tr>
                            <td><h5><b>Group B</b></h5></td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in model.GroupB track by $index">
                            <td>{{item}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-3">
                <table border="0">
                    <thead>
                        <tr>
                            <td><h5><b>Group C</b></h5></td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in model.GroupC track by $index">
                            <td>{{item}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-3">
                <table border="0">
                    <thead>
                        <tr>
                            <td><h5><b>Group D</b></h5></td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in model.GroupD track by $index">
                            <td>{{item}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

